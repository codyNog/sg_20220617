{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "lib": ["es2019", "esnext.asynciterable"],
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "target": "ESNext", // TSはECMAScript 5に変換
    "module": "commonjs", // TSのモジュールはES Modulesとして出力,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
    },
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "vitest.config.ts"],
}
